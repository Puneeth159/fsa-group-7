                                <br />
                                <div id="location"></div>
                                <br />
                                <div id="error-message"></div>
                                <div id="device-lat"></div>
                                <div id="device-long"></div>
                                <div id="error"></div>
                            </div>
                        </div>
                    </div>

                </div>
                </div>
                </div>
                <br>


                <div class="form-group">
                    <form action="https://fsa-group-7.herokuapp.com/locations/create">
