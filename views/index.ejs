    <body>

        <header>
            <div class="b">Treasure Finder Game</div>
        </header>
        <main>
            <article>
                <div>
                    <div id="container">
                        <div id="bgrone">

                            <a id="field">
                                <span id="ready"></span>
                                <span id="ready1"></span>
                                <span id="lname" value="<%= v.name %>">
                                    <%= v.name %>

                                </span>
                                <span id="llat" value="<%= v.latitude %>" style="visibility: hidden;"></span>
                                <span id="llong" value="<%= v.longitude %>" style="visibility: hidden;"></span></a>
