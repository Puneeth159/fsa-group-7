    <body>
        <header>
        <div class="b">
           <a href= "https://fsa-group-7.herokuapp.com/">Treasure Finder Game</div></a>
        </header>
        <main>
            <br><br><br><br>
            <table class="table table-inverse">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Longitude</th>
                        <th>Latitude</th>
                        <th>Edit</th>
                        <th>Delete</th>
                    </tr>
                </thead>

                <tbody>
                    <% for(var i=0; i < locations.length; i++) { %>
                        <tr>
                            <td>
                               
                                    <%= locations[i].locationName %>
                            </td>
                            <td>
                                <%= locations[i].longitude %>
                            </td>
                            <td>
                                <%= locations[i].latitude %>
                            </td>
                            <td>
                                <form action="/locations/editview/<%= locations[i]._id %>" >
                                    <div class="form">
                                        
                                        <button type="submit" class="btn btn-primary">EDIT<%= locations[i].id %></button>
                                    </div>
                                </form>
                                
                            </td>
                            <td>
                                <form action="/locations/delete/<%= locations[i]._id %>" method="POST">
                                    <div class="form">
                                        <button type="submit" class="btn btn-primary">Delete<%= locations[i].id %></button>
                                    </div>
                                </form>
                            </td>
                            <!-- <a href="/locations/delete">Delete</a> -->
                            </td>
                        </tr>
                        <% } %>
                </tbody>
            </table>
        </main>
        <script type="module" src="./scripts/main.js "></script>
        <link href="../public/Styles/main.css" rel="stylesheet" type="text/css">


    </body>
