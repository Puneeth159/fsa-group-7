    <body>
        <header>
            <div class="b">Treasure Finder Game</div>
        </header>
        <main>


            <br>
            <br>
            <br>
            <form action="/locations/" class="f" method="POST">
                <div class="card-body">
                    <div class="form-group">
                        <label for="name" class="c1">Location Name: </label>
                        <input id="name" type="text" name="locationName" value="">
                    </div>
                    <div class="form-group">
                        <label for="latitude" class="c1"> Enter Latitude: </label>
                        <input id="lat" type="number" step="any" min="-90.00" max="90.00" name="latitude" value="">
                    </div>
                    <div class="form-group">
                        <label for="longitude" class="c1"> Enter Longitude: </label>
                        <input id="lon" type="number" step="any" min="-180.00" max="180.00" name="longitude" value="">
                    </div>

                    <div id="t">
                        <button type="submit" id = "t" class="btn btn-primary" >Save</button>
                    </div>

                </div>
            </form>
        </main>

        <link href="../public/Styles/main.css" rel="stylesheet" type="text/css">
        <script type="module " src="../services.js "></script>
    </body>
