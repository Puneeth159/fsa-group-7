    <style>
        .b {
            background-color: black;
            text-align: center;
            color: white;
            font-size: 25px;
            height: 50px;
        }
        .foot{
            position: fixed;
            bottom: 0;
            background-color: black;
            text-align: center;
            color: white;
            width: 100%;
            font-size: 25px;
            height: 50px;
        }
       
        .f{
            text-align: center;
        }
        .a {
        background-color: black;
        color: white;
        border:none;
        margin-top: 5%;
        padding-left: 0%;
        }
